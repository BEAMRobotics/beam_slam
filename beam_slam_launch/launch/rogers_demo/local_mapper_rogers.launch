<launch>
  
  <!-- Load calibration params for this dataset,  including intrinsics and extrinsics. 
       Note: These are global params that need to be loaded for all launch files. -->
  <rosparam command="load" file="$(find beam_slam_launch)/config/ig2/calibration_params.yaml"/>

  <!-- Include calibration publisher for this dataset -->
  <include file="$(find beam_slam_launch)/launch/ig2/calibration_publisher_handle.launch" />

  <!-- Launch local mapper -->
  <node pkg="fuse_optimizers" type="fixed_lag_smoother_node" name="local_mapper" output="screen">
      <rosparam command="load" file="$(find beam_slam_launch)/config/rogers_demo/local_mapper.yaml"/>
  </node>

</launch>
