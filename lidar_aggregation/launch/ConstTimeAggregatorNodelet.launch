<launch>
      <node pkg="nodelet" type="nodelet" name="nodelet_manager" args="manager"/>
      <node pkg="nodelet" type="nodelet" name="publisher" args="load lidar_aggregation/lidar_aggregation_nodelet nodelet_manager" output="screen"/>
      <node pkg="nodelet" type="nodelet" name="aggregator" args="load lidar_aggregation/lidar_aggregation_time_publisher_nodelet nodelet_manager" output="screen"/>
</launch>